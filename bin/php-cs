#!/usr/bin/env bash
script_dir="$(dirname "$0")"
cd ${script_dir}

. imports.sh

OPTION_PROPAGATE=1

help_message

info "PHP Code Sniffer..."
docker-compose -f ${DOCKER_COMPOSE_FILE} exec app phpcs --version
if [[ ${EXEC} == 1 ]]
then
    if [[ -z "$@" ]]
    then
        docker-compose -f ${DOCKER_COMPOSE_FILE} exec app phpcs
    else
        docker-compose -f ${DOCKER_COMPOSE_FILE} exec app phpcs "$@"
    fi
else
  no-exec
fi
