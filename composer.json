{
    "name": "alecrabbit/php-console-spinner",
    "type": "library",
    "description": "Colorful extremely flexible spinner for [async] php cli applications",
    "keywords": [
        "php",
        "terminal",
        "spinner",
        "console",
        "cli",
        "pretty",
        "shell",
        "bash",
        "256color",
        "8bit",
        "colorful",
        "ansi",
        "async",
        "snake"
    ],
    "license": "MIT",
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "symfony/console": "^6.1",
        "fakerphp/faker": "*",
        "nunomaduro/collision": "^7.0",
        "nunomaduro/termwind": "^1.14",
        "phpunit/phpunit": "^10.0",
        "react/http": "*",
        "symfony/var-dumper": "^6.1",
        "react/event-loop": "*",
        "phpunit/php-code-coverage": "*",
        "revolt/event-loop": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "AlecRabbit\\Spinner\\": "src\\Spinner\\"
        },
        "files": [
            "src/bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AlecRabbit\\Tests\\Spinner\\": "tests"
        }
    },
    "suggest": {
        "ext-pcntl": "For signal handling support.",
        "ext-mbstring": "For multibyte Unicode string functionality.",
        "react/event-loop": "For ReactPHP event-loop support.",
        "revolt/event-loop": "For Revolt event-loop support."
    },
    "minimum-stability": "stable"
}
